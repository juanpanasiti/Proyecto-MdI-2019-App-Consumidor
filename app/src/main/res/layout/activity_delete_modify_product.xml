<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeleteModifyProduct">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textColor="@color/btnAzul"
        android:background="@drawable/diseno_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:id="@+id/btn_de_prod_a_cat"
        android:onClick="onClickDeleteModifyProd"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:id="@+id/productoMostrar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnModificarProducto"
            android:id="@+id/campoProductoMod"
            android:inputType="text"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/btnEditarProd"
            android:textColor="@color/btnAzul"
            android:background="@drawable/diseno_button"
            android:id="@+id/btnModificarProducto"
            android:onClick="onClickDeleteModifyProd"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnModificarProducto"
            android:text="@string/btnEliminarProd"
            android:textColor="@color/btnAzul"
            android:background="@drawable/diseno_button"
            android:id="@+id/btnEliminarProducto"
            android:onClick="onClickDeleteModifyProd"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnModificarProducto"
            android:layout_below="@+id/campoProductoMod"
            android:id="@+id/campoMarcaMod"
            android:inputType="text"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnModificarProducto"
            android:layout_below="@+id/campoMarcaMod"
            android:id="@+id/campoContentUnitMod"
            android:inputType="number"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnModificarProducto"
            android:layout_below="@+id/campoContentUnitMod"
            android:id="@+id/campoContentQuantityMod"
            android:inputType="text"
            />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeleteModifyProduct">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_de_prod_a_cat"
        />

    <GridLayout
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:rowCount="4"
        >

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoProductoMod"
            android:inputType="text"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_columnWeight="0"
            android:text="@string/btnEditarProd"
            android:textColor="@color/btnAzul"
            android:background="@drawable/diseno_button"
            android:id="@+id/btnModificarProducto"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="@string/btnEliminarProd"
            android:textColor="@color/btnAzul"
            android:background="@drawable/diseno_button"
            android:id="@+id/btnEliminarProducto"
            android:layout_row="1"
            android:layout_column="1"

            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoMarcaMod"
            android:inputType="text"
            android:layout_row="1"
            android:layout_column="0"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoContentUnitMod"
            android:inputType="number"
            android:layout_row="2"
            android:layout_column="0"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoContentQuantityMod"
            android:inputType="text"
            android:layout_row="3"
            android:layout_column="0"
            />

    </GridLayout>

</LinearLayout>
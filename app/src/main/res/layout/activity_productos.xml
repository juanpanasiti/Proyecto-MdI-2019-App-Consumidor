<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductosActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_de_prod_a_home"
        />

    <GridLayout
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoProducto"
            android:hint="@string/hintProd"
            android:inputType="text"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_columnWeight="0"
            android:text="@string/btnAgregarProd"
            android:textColor="@color/btnAzul"
            android:background="@drawable/diseno_button"
            android:id="@+id/btnAgregarProducto"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoMarca"
            android:hint="@string/hintMarcaProd"
            android:inputType="text"
            android:layout_row="1"
            android:layout_column="0"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoContentUnit"
            android:hint="@string/hintContentQuantity"
            android:inputType="number"
            android:layout_row="2"
            android:layout_column="0"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_columnWeight="0"
            android:id="@+id/campoContentQuantity"
            android:hint="@string/hintContentUnit"
            android:inputType="text"
            android:layout_row="3"
            android:layout_column="0"
            />

    </GridLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/spinnerCategorias"
        >
    </Spinner>

</LinearLayout>